<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            file-extensions="mfl"
            default-charset="UTF-8"
            name="%mflContentTypeName"
            priority="high"
            id="mfl"
            base-type="org.eclipse.core.runtime.xml">
         <describer class="com.bea.wli.ide.formatbuilder.MFLContentDescriber"/>
   </content-type>
   </extension>
   
   <extension
         point="org.eclipse.ui.editors">
      <editor
            launcher="com.bea.wli.ide.formatbuilder.editors.FormatBuilderEditor"
            contributorClass="com.bea.wli.ide.mapper.editors.FormatBuilderEditorContributor"
            default="true"
            extensions="mfl"
            icon="resources/images/formatbuilder/message-format-file-16.png"
            id="com.bea.alsb.common.formatbuilder.editors.FormatBuilderEditor"
            name="%FormatBuilderEditor">
         <contentTypeBinding contentTypeId="com.bea.alsb.common.formatbuilder.MFL"/>
      </editor>
   </extension>

   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.bea.alsb.common.mapper.perspectives.MapperPerspective">
         <actionSet
               id="com.bea.alsb.common.formatbuilder.actionSet">
         </actionSet>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Launch Format Builder Action Set"
            visible="false"
            id="com.bea.alsb.common.formatbuilder.actionSet">
         <menu
               label="%Run"
               path="additions"
               id="org.eclipse.ui.run">
            <separator
                  name="weblogicIntegrationGroup">
            </separator>
         </menu>
         <menu
               label="%WeblogicIntegration"
               path="org.eclipse.ui.run/weblogicIntegrationGroup"
               id="weblogicIntegrationMenu">
            <separator
                  name="formatBuilderGroup">
            </separator>
         </menu>
         <action
               label="%FormatBuilder"
               icon="resources/images/formatbuilder/message-format-file-16.png"
               class="com.bea.wli.ide.formatbuilder.actions.FormatBuilderMenuAction"
               menubarPath="org.eclipse.ui.run/weblogicIntegrationMenu/formatBuilderGroup"
               id="com.bea.alsb.common.formatbuilder.actions.FormatBuilderMenuAction">
         </action>
      </actionSet>
   </extension>
