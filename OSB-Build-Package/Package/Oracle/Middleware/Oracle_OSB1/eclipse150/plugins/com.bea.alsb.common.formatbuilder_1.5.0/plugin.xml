               class="com.bea.wli.ide.formatbuilder.actions.FormatBuilderPopUpAction"
               enablesFor="1"
               id="com.bea.alsb.common.formatbuilder.actions.FormatBuilderPopUpAction">
         </action>
      </objectContribution>
   </extension>
   -->
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            name="%NewMFLFile"
            icon="resources/images/formatbuilder/message-format-file-wiz-16.png"
			category="com.bea.alsb.common.mapper"
            class="com.bea.wli.ide.formatbuilder.wizards.MFLNewWizard"
            id="com.bea.alsb.common.formatbuilder.wizards.MFLNewWizard">
         <description>
            %NewMFLFileDescription
         </description>
      </wizard>
      <wizard
            name="%NewMFLFile"
            icon="resources/images/formatbuilder/message-format-file-wiz-16.png"
			category="com.bea.alsb.util.ui"
            class="com.bea.wli.ide.formatbuilder.wizards.MFLNewWizard"
            id="com.bea.alsb.common.formatbuilder.wizards.MFLNewWizard">
         <description>
            %NewMFLFileDescription
         </description>
      </wizard>
   </extension>

</plugin>
