<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
	<extension point="org.eclipse.ui.newWizards">
		<category id="com.bea.alsb.new" name="%ALSBCategory_name">
		</category>
        <wizard
              category="com.bea.alsb.new"
              class="com.bea.alsb.ui.resources.custom.wizard.NewCustomResourceWizard"
              finalPerspective="com.bea.alsb.ui.perspectives.aqualogic"
              icon="icons/new_custom_resource.gif"
              id="com.bea.alsb.ui.wizards.cr"
              name="%NewCustomResourceWizard_name"
              preferredPerspectives="com.bea.alsb.ui.perspectives.aqualogic"
              project="false">
           <description>%NewCustomResourceWizard_description</description>
        </wizard>  
	</extension>
	
	<extension point="org.eclipse.ui.navigator.navigatorContent">
        <commonWizard type="new" 
                      menuGroupId="com.bea.alsb.new"
                      wizardId="com.bea.alsb.ui.wizards.cr">
            <enablement>
                <or>
                    <adapt type="org.eclipse.core.resources.IResource">
				        <test forcePluginActivation="true"
				              property="org.eclipse.core.resources.projectNature"
				              value="com.bea.alsb.core.natures.alsb.project"/>
				    </adapt>
                </or>
            </enablement>
        </commonWizard>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
        <editor
              class="com.bea.alsb.ui.resources.custom.editor.CustomResourceEditor"
              contributorClass="com.bea.alsb.ui.resources.common.AlsbEditorActionBarContributer"
              default="true"
              icon="icons/icon_custom_resource.gif"
              id="com.bea.alsb.ui.editors.cr"
              name="%CustomResourceEditor_name">
            <contentTypeBinding contentTypeId="com.bea.alsb.core.resources.custom.content-type"/>
        </editor>
	</extension>
	<extension
	   point="org.eclipse.ui.perspectiveExtensions">
	   <perspectiveExtension targetID="com.bea.alsb.ui.perspectives.aqualogic">
	      <newWizardShortcut id="com.bea.alsb.ui.wizards.cr"/>
	   </perspectiveExtension>
	</extension>
</plugin>
