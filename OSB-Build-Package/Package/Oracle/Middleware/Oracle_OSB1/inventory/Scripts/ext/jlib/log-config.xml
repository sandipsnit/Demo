<!--
NAME
log-config.xml

DESCRIPTION
This XML document is the logging configuration file for OSB.

MODIFIED     (MM/DD/YY)   (Bug #)        (Description)
vvirutha     04/25/08                    created
-->
<logging_configuration>

<!-- Default properties for logging supported by the install engine -->

	<log_handlers>

		<log_handler name='ojdlHandler' class='oracle.core.ojdl.logging.ODLHandlerFactory'>
			<property name='path' value='${oracle.install.engine.log.dir}/${oracle.install.engine.log.file}'/>
			<property name='maxFileSize' value='20971520'/>
			<property name='maxLogSize' value='50000000'/>
			<property name='format' value='ODL-Text'/>
		</log_handler>

		<log_handler name='installModuleHandler' class='oracle.core.ojdl.logging.ODLHandlerFactory'>
			<property name='path' value='${oracle.install.engine.log.dir}/${oracle.install.engine.modules.install.log.file}'/>
			<property name='maxFileSize' value='20971520'/>
			<property name='maxLogSize' value='50000000'/>
			<property name='format' value='ODL-Text'/>
		</log_handler>

		<log_handler name='consoleHandler' class='java.util.logging.ConsoleHandler'>
			<property name='path' value='${oracle.install.engine.log.dir}/${oracle.install.engine.log.file}'/>
			<property name='format' value='ODL-Text'/>
			<property name='maxFileSize' value='20971520'/>
			<property name='maxLogSize' value='50000000'/>
		</log_handler>
                
                <log_handler name='configModule' class='oracle.core.ojdl.logging.ODLHandlerFactory'>
                        <property name='path' value='${oracle.install.engine.log.dir}/${oracle.install.engine.log.file}'/>
                        <property name='maxFileSize' value='20971520'/>
                        <property name='maxLogSize' value='50000000'/>
                        <property name='format' value='ODL-Text'/>
                </log_handler>


	</log_handlers>

<!-- "Message Type:Level"="NOTIFICATION:1" -->
<!--  Since the logger name is "oracle.install.engine" all the child loggers will
	inherit the properties set here
-->
	<loggers>

		<logger name='oracle.as.install.engine' level='NOTIFICATION:1' useParentHandlers='false'>
			<handler name='ojdlHandler'/>
		</logger>
		<logger name='oracle.as.install.engine.modules.validation' level='NOTIFICATION:1' useParentHandlers='false'>
			<handler name='ojdlHandler'/>
		</logger>
                <!-- <logger name='oracle.as.install.engine.modules.validation' level='TRACE:32' useParentHandlers='false'>
                        <handler name='ojdlHandler'/> 
                </logger> -->

		<logger name='oracle.as.install.engine.modules.install' level='NOTIFICATION:1' useParentHandlers='false'>
			<handler name='installModuleHandler'/>
		</logger>
		<!-- <logger name='oracle.as.install.engine.modules.install' level='TRACE:16' useParentHandlers='false'>
			<handler name='installModuleHandler'/>
		</logger>  -->

		<logger name='oracle.as.install.engine.modules.validation' level='NOTIFICATION:1' useParentHandlers='false'>
			<handler name='ojdlHandler'/>
		</logger>

		<!-- Console handler  -->
		<logger name='oracle.as.install.engine.parser' level='NOTIFICATION:1' useParentHandlers='false'>
			<handler name='consoleHandler'/>
		</logger>

                <logger name='oracle.as.install.engine.modules.response' level='NOTIFICATION:1' useParentHandlers='false'>
			<handler name='ojdlHandler'/>
		</logger>

                <logger name='oracle.as.install.engine.modules.silent' level='NOTIFICATION:1' useParentHandlers='false'>
			<handler name='ojdlHandler'/>
		</logger>

                <logger name='oracle.as.install.engine.config' level='NOTIFICATION:1' useParentHandlers='false'>
                        <handler name='configModule'/>
                </logger>
		
		<logger name='oracle.as.config' level='NOTIFICATION:1' useParentHandlers='false'>
			<handler name='ojdlHandler'/>
		</logger>

		<logger name='oracle.as.install.config' level='NOTIFICATION:1' useParentHandlers='false'>
			<handler name='ojdlHandler'/>
		</logger>

		<logger name='oracle.as.provisioning' level='NOTIFICATION:1' useParentHandlers='false'>
			<handler name='ojdlHandler'/>
		</logger>

	</loggers>
	
</logging_configuration>

