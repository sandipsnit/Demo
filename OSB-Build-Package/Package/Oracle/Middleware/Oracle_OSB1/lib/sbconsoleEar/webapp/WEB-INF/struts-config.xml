<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "struts-config_1_1.dtd">

<struts-config>


  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

		<form-bean name="genericTableForm" type="org.apache.struts.action.DynaActionForm">
            <form-property name="name"
                           type="java.lang.String"/>
			<form-property name="contents"
				           type="java.util.Collection"/>
			<form-property name="handle"
				           type="com.bea.console.handles.Handle"/>
            <form-property name="tablePreferences"
                           type="com.bea.console.cvo.preferences.TablePreferences"/>
		</form-bean>

        <form-bean name="systemStatusForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="systemStatus"
				           type="com.bea.console.cvo.systemstatus.SystemStatusBean"/>
        </form-bean>

        <form-bean name="systemStatusDetail" type="org.apache.struts.action.DynaActionForm">
            <form-property name="messageDetail"
                           type="com.bea.console.cvo.systemstatus.SystemStatusMessageDetailBean"/>
        </form-bean>


        <form-bean name="preferencesForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="handle"
                           type="com.bea.console.handles.Handle"/>
            <form-property name="name"
                           type="java.lang.String"/>
			<form-property name="preferences"
				           type="com.bea.console.cvo.preferences.GlobalPreferences"/>
        </form-bean>

    <form-bean name="tablePreferencesForm" type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="handle"
                           type="com.bea.console.handles.Handle"/>
            <form-property name="name"
                           type="java.lang.String"/>
            <form-property name="preferences"
                           type="com.bea.console.cvo.preferences.TablePreferences"/>
         </form-bean>

    <form-bean name="changeListForm" type="org.apache.struts.validator.DynaValidatorForm">
      <form-property name="handle"
        type="com.bea.console.handles.Handle"/>
      <form-property name="name"
        type="java.lang.String"/>
      <form-property name="changelist"
        type="com.bea.console.cvo.changemgmt.ChangeList"/>
    </form-bean>

    <form-bean name="dispatcherForm" type="org.apache.struts.validator.DynaValidatorForm">
      <form-property name="handle"
        type="com.bea.console.handles.Handle"/>
      <form-property name="perspective"
        type="java.lang.String"/>

    </form-bean>

    <form-bean name="customizedForm" type="com.bea.console.actionforms.CustomizerForm">
       <form-property name="handle"
                           type="com.bea.console.handles.Handle"/>
       <form-property name="name"
                           type="java.lang.String"/>
       <form-property name="tablePrefererences"
                           type="com.bea.console.cvo.preferences.TablePreferences"/>
     </form-bean>

  </form-beans>

  <!-- ========== Global Forward Definitions ============================== -->
  <global-forwards>
    <forward name="error" path="/common/errors/unexpected_error.jsp"/>
  </global-forwards>
  <!-- ========== Action Mapping Definitions ============================== -->
  <action-mappings>

   <action path="/TablePreferencesUpdatedAction"
            type="com.bea.console.actions.preferences.TablePreferencesUpdatedAction"
            scope="request"
            validate="false"
            name="customizedForm">
         <forward name="success" path="/TablePreferencesAction.do"/>
    </action>

    <action path="/GlobalPreferencesAction"
            type="com.bea.console.actions.preferences.GlobalPreferencesAction"
            scope="request"
            validate="false"
            name="preferencesForm">
       <forward name="success"
                contextRelative="true"
                path="/jsp/preferences/globalpreferences.jsp"/>
    </action>

    <action path="/GlobalPreferencesUpdatedAction"
            type="com.bea.console.actions.preferences.GlobalPreferencesUpdatedAction"
            scope="request"
            validate="false"
            name="preferencesForm">
       <forward name="success" path="/GlobalPreferencesAction.do"/>
    </action>

    <!-- Home Page Action -->

    <action path="/HomeAction" type="com.bea.console.actions.HomeAction" />

        <action path="/DispatcherAction"
                type="com.bea.console.actions.DispatcherAction"
                scope="request"
                validate="false"
                name="dispatcherForm">
             <!-- Dynamic Forward -->
       </action>

      <action path="/BackToParent" type="com.bea.alsb.console.common.support.BackToParentAction"></action>

  </action-mappings>

  <controller inputForward="true" nocache="true" processorClass="com.bea.console.internal.ConsolePageFlowRequestProcessor">
      <set-property  property="nocache" value="true"/>
      <set-property property="contentType" value="text/html;charset=UTF-8"/>
  </controller>

  <!-- this is a bug in struts, for some reason in complains if this message resource isnt here -->
  <message-resources parameter="global"/>
  <message-resources parameter="validationmessages" key="VALIDATIONMESSAGES"/>
  <message-resources parameter="genresources" key="GENRESOURCES"/>
  <message-resources parameter="global" key="GLOBAL"/>

</struts-config>
