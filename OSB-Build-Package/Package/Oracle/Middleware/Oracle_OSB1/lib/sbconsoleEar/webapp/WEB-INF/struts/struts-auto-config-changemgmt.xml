<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	                           "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

    <form-beans>
        <form-bean name="SimpleForm" type="com.bea.alsb.console.forms.SimpleForm" />
        <form-bean name="ActivatePopupForm" type="com.bea.alsb.console.changemgmt.forms.ActivatePopupForm" />
        <form-bean name="PurgeForm" type="com.bea.alsb.console.changemgmt.forms.PurgeForm" />
    </form-beans>

    <global-exceptions>
        <exception key=""
                   type="java.lang.Exception"
                   handler="com.bea.alsb.console.controller.ConsoleException" />
    </global-exceptions>

    <global-forwards>
        <forward name="GlobalException"
                 contextRelative="true"
                 path="jsp/main/ErrorPage.jsp" />
    </global-forwards>

	<action-mappings>
        <action
            path="/ViewChanges"
            type="com.bea.alsb.console.changemgmt.actions.ViewChangesAction"
            input="success">
            <forward
                name="success"
                contextRelative="true"
                path="jsp/changemgmt/ViewChanges.jsp"/>
        </action>

        <action
            path="/ViewAllSessions"
            type="com.bea.alsb.console.changemgmt.actions.ViewAllSessionsAction">
            <forward
                name="success"
                contextRelative="true"
                path="jsp/changemgmt/ViewAllSessions.jsp"/>
        </action>

        <action
            path="/SwitchSession"
            type="com.bea.alsb.console.changemgmt.actions.SwitchSessionAction">
            <forward
                name="error"
                path="/ViewAllSessions.do"/>
            <forward
                name="success"
                path="/ViewChanges.do"/>
        </action>

        <action
            path="/UndoTask"
            type="com.bea.alsb.console.changemgmt.actions.UndoTaskAction"
            name="SimpleForm"
            scope="session"
            validate="true"
            input="success">
            <forward
                name="success"
                path="/ViewChanges.do" />
        </action>

        <action
            path="/RedoTask"
            type="com.bea.alsb.console.changemgmt.actions.RedoTaskAction"
            name="SimpleForm"
            scope="session"
            validate="true"
            input="success">
            <forward
                name="success"
                path="/ViewChanges.do" />
        </action>

        <action path="/ViewTaskDetails"
            type="com.bea.alsb.console.changemgmt.actions.ViewTaskDetailsAction"
            name="SimpleForm"
            scope="session"
            validate="true"
            input="success" >
            <forward name="success"
                contextRelative="true"
                path="jsp/changemgmt/ViewTaskDetails.jsp" />
        </action>

        <action path="/ViewChangeCenter"
            type="com.bea.alsb.console.changemgmt.actions.ViewChangeCenterAction"
            name="SimpleForm"
            scope="session"
            validate="false"
            input="success" >
            <forward name="success"
                contextRelative="true"
                path="jsp/changemgmt/ViewChangeCenter.jsp" />
        </action>

        <action path="/ProcessChanges"
            type="com.bea.alsb.console.changemgmt.actions.ProcessChangesAction"
            name="SimpleForm"
            scope="session"
            validate="false"
            input="success" >
            <forward name="success"
                contextRelative="true"
                path="jsp/changemgmt/ViewChangeCenter.jsp" />
            <forward name="activate"
                path="/SessionActivateEntry.do" />
        </action>

        <action path="/ViewConflicts"
            type="com.bea.alsb.console.changemgmt.actions.ViewConflictsAction"
            name="SimpleForm"
            scope="session"
            validate="false"
            input="success" >
            <forward name="success"
                contextRelative="true"
                path="jsp/changemgmt/ViewConflicts.jsp" />
        </action>

        <action path="/SynchronizeWithCore"
            type="com.bea.alsb.console.changemgmt.actions.SynchronizeWithCoreAction"
            name="SimpleForm"
            scope="session"
            validate="false"
            input="success" >
            <forward name="success"
                path="/ViewConflicts.do" />
        </action>

        <action path="/SessionActivateEntry"
            type="com.bea.alsb.console.changemgmt.actions.SessionActivateEntryAction"
            name="ActivatePopupForm"
            attribute="activateform"
            scope="session"
            validate="false">
            <forward name="success"
                     contextRelative="true"
                     path="jsp/changemgmt/ActivateSession.jsp"/>
        </action>

        <action path="/SessionActivate"
            type="com.bea.alsb.console.changemgmt.actions.SessionActivateAction"
            name="ActivatePopupForm"
            attribute="activateform"
            scope="session"
            validate="false">
            <forward name="success"
                     path="/ViewChanges.do"/>
            <forward name="error"
                     contextRelative="true"
                     path="jsp/changemgmt/ActivateSession.jsp"/>
        </action>

        <action path="/ViewPurgeForm"
                type="com.bea.alsb.console.changemgmt.actions.ViewPurgeFormAction">
            <forward name="success"
                     contextRelative="true"
                     path="jsp/changemgmt/PurgeTasks.jsp"/>

        </action>

        <action path="/PurgeTasks"
                type="com.bea.alsb.console.changemgmt.actions.PurgeTasksAction"
                name="PurgeForm"
                attribute="PurgeForm"
                scope="request"
                validate="true"
                input="error">
            <forward name="success"
                     contextRelative="true"
                     path="jsp/changemgmt/PurgeTasks.jsp"/>
            <forward name="error"
                     contextRelative="true"
                     path="jsp/changemgmt/PurgeTasks.jsp"/>

        </action>

        <action path="/ViewChangeHistory"
                type="com.bea.alsb.console.changemgmt.actions.ViewChangeHistoryAction">
            <forward name="success"
                     contextRelative="true"
                     path="jsp/changemgmt/ViewChangeHistory.jsp"/>

        </action>

        <action path="/SortChangeHistory"
                type="org.apache.struts.actions.ForwardAction"
                parameter="jsp/changemgmt/ViewChangeHistory.jsp"/>


    </action-mappings>

    <controller processorClass="com.bea.alsb.console.common.base.SBConsoleRequestProcessor"
                inputForward="true" nocache="true"/>

</struts-config>
