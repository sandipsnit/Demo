<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	                           "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

    <form-beans>
        <form-bean name="SimpleForm" type="com.bea.alsb.console.forms.SimpleForm" />
        <form-bean name="ImportRepositoryForm"  type="com.bea.alsb.console.deployment.forms.ImportRepositoryForm" />
        <form-bean name="ImportPassphraseForm"  type="com.bea.alsb.console.deployment.forms.ImportPassphraseForm" />
        <form-bean name="ExportPassphraseForm"  type="com.bea.alsb.console.deployment.forms.ExportPassphraseForm" />
    </form-beans>

    <global-exceptions>
        <exception key=""
                   type="java.lang.Exception"
                   handler="com.bea.alsb.console.controller.ConsoleException" />
    </global-exceptions>

    <global-forwards>
        <forward name="GlobalException"
                 contextRelative="true"
                 path="jsp/main/ErrorPage.jsp" />
    </global-forwards>

	<action-mappings>

        <!--
            Export page, first views then CUDs
        -->
        <action path="/ViewExportRepository"
                type="com.bea.alsb.console.deployment.actions.ViewExportRepositoryAction"
                name="SimpleForm"
                scope="session"
                parameter="tab"
                validate="true"
                input="success" >
            <forward name="success"
                contextRelative="true"
                path="jsp/deployment/export/ViewExportRepository.jsp" />
        </action>

        <action path="/CreateExportRepository"
                type="com.bea.alsb.console.deployment.actions.CreateExportRepositoryAction"
                name="SimpleForm"
                scope="session"
                validate="true"
                input="success">
            <forward name="error"
                contextRelative="true"
                path="jsp/deployment/export/ViewExportRepository.jsp" />
            <forward name="success"
                path="/ViewExportRepository.do" />
        </action>

        <action path="/UpdateExportRepository"
                type="com.bea.alsb.console.deployment.actions.UpdateExportAction"
                name="SimpleForm"
                scope="session"
                parameter="tab"
                validate="true"
                input="success" >
            <forward name="enterExportPassphrase"
                contextRelative="true"
                path="jsp/deployment/export/EnterExportPassphrase.jsp" />
            <forward name="viewexportrepository"
                path="/ViewExportRepository.do" />
            <forward name="viewrefs"
                path="/ViewRefs.do" />
        </action>

        <action path="/EnterExportPassphrase"
            type="com.bea.alsb.console.deployment.actions.EnterExportPassphraseAction"
            name="ExportPassphraseForm"
            scope="session"
            attribute="passphraseForm"
            validate="true"
            input="error">
            <forward name="previous"
                contextRelative="true"
                path="jsp/deployment/export/ViewExportRepository.jsp"/>
            <forward name="success"
                path="ViewExportRepository.do" />
            <forward name="cancel"
                path="CreateExportRepository.do" />
            <forward name="error"
                contextRelative="true"
                path="jsp/deployment/export/EnterExportPassphrase.jsp" />
        </action>

        <action path="/UpgradeExportJar"
                type="com.bea.alsb.console.deployment.actions.UpgradeExportJarAction"
                name="ImportRepositoryForm"
                attribute="object"
                scope="request"
                validate="false"
                input="success" >
            <forward name="success"
                contextRelative="true"
                path="jsp/deployment/export/UpgradeExportJar.jsp" />
        </action>

        <!--
            Import page, first views then CUDs
        -->

        <action path="/ViewImportRepository"
            type="com.bea.alsb.console.deployment.actions.ViewImportRepositoryAction"
            name="SimpleForm"
            scope="session"
            validate="true"
            input="success" >
            <forward name="success"
                contextRelative="true"
                path="jsp/deployment/import/ViewImportRepository.jsp" />
            <forward name="error"
                contextRelative="true"
                path="jsp/deployment/import/CreateImportRepository.jsp" />
        </action>

        <action path="/CreateImportRepository"
            type="com.bea.alsb.console.deployment.actions.CreateImportRepositoryAction"
            name="SimpleForm"
            scope="session"
            validate="false"
            input="success" >
            <forward name="success"
                contextRelative="true"
                path="jsp/deployment/import/CreateImportRepository.jsp" />
        </action>

        <action path="/LoadImportFile"
            type="com.bea.alsb.console.deployment.actions.LoadImportFileAction"
            name="ImportRepositoryForm"
            scope="session"
            validate="true"
            input="error" >
            <forward name="error"
                contextRelative="true"
                path="jsp/deployment/import/CreateImportRepository.jsp" />
            <forward name="success"
                contextRelative="true"
                path="jsp/deployment/import/ViewImportRepository.jsp"/>
        </action>


        <action path="/UpdateImportRepository"
            type="com.bea.alsb.console.deployment.actions.UpdateImportRepositoryAction"
            name="SimpleForm"
            scope="session"
            validate="true"
            input="success" >
            <forward name="createimportrepository"
                contextRelative="true"
                path="jsp/deployment/import/CreateImportRepository.jsp" />
            <forward name="viewimportrepository"
                contextRelative="true"
                path="jsp/deployment/import/ViewImportRepository.jsp"/>
            <forward name="enterImportPassphrase"
                contextRelative="true"
                path="jsp/deployment/import/EnterImportPassphrase.jsp" />
            <forward name="finish"
                contextRelative="true"
                path="jsp/deployment/import/FinishImport.jsp" />
            <forward name="viewrefs"
                path="/ViewRefs.do" />
        </action>

        <action path="/EnterImportPassphrase"
            type="com.bea.alsb.console.deployment.actions.EnterImportPassphraseAction"
            name="ImportPassphraseForm"
            scope="session"
            attribute="passphraseForm"
            validate="true"
            input="error">
            <forward name="createimportrepository"
                contextRelative="true"
                path="jsp/deployment/import/CreateImportRepository.jsp" />
            <forward name="previous"
                contextRelative="true"
                path="jsp/deployment/import/ViewImportRepository.jsp"/>
            <forward name="cancel"
                contextRelative="true"
                path="jsp/deployment/import/CreateImportRepository.jsp" />
            <forward name="error"
                contextRelative="true"
                path="jsp/deployment/import/EnterImportPassphrase.jsp" />
            <forward name="finish"
                contextRelative="true"
                path="jsp/deployment/import/FinishImport.jsp" />
        </action>

        <action path="/FinishImport"
            type="com.bea.alsb.console.deployment.actions.FinishImportAction"
            name="SimpleForm"
            scope="session"
            validate="true"
            input="success" >
            <forward name="importAnother"
                contextRelative="true"
                path="jsp/deployment/import/CreateImportRepository.jsp" />
            <forward name="success"
                contextRelative="true"
                path="jsp/deployment/import/FinishImport.jsp" />
        </action>

        <action path="/ViewRefs"
            type="com.bea.alsb.console.deployment.actions.ViewRefsAction"
            name="SimpleForm"
            scope="session"
            validate="true"
            input="success" >
            <forward name="success"
                contextRelative="true"
                path="jsp/deployment/ViewRefs.jsp" />
            <forward name="viewexportrepository"
                path="/ViewExportRepository.do" />            
            <forward name="viewimportrepository"
                path="/ViewImportRepository.do" />            
        </action>

	</action-mappings>

    <controller processorClass="com.bea.alsb.console.common.base.SBConsoleRequestProcessor"
                inputForward="true" nocache="true"/>

</struts-config>
