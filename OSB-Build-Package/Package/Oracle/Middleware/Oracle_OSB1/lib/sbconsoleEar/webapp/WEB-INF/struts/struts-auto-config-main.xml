<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	                           "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

    <form-beans>
        <form-bean name="SimpleForm" type="com.bea.alsb.console.forms.SimpleForm" />
    </form-beans>

    <global-exceptions>
        <exception key=""
                   type="java.lang.Exception"
                   handler="com.bea.alsb.console.controller.ConsoleException" />
    </global-exceptions>

    <global-forwards>
        <forward name="GlobalException"
                 contextRelative="true"
                 path="jsp/main/ErrorPage.jsp" />
    </global-forwards>

	<action-mappings>

        <action path="/SBConsoleEntry"
                type="com.bea.alsb.console.main.SBConsoleEntryAction" >
            <forward name="success"
                     redirect="true"
                     path="/" />
        </action>

        <action path="/Welcome"
                type="com.bea.alsb.console.main.WelcomeAction" >
            <forward name="success"
                     contextRelative="true"
                     path="jsp/welcome/Welcome.jsp" />
        </action>

        <action path="/Logout"
                type="com.bea.alsb.console.main.LogoutAction" >
            <forward name="success"
                     redirect="true"
                     path="/" />
        </action>

        <action path="/StatusMessages"
                scope="request"
                type="com.bea.alsb.console.main.StatusMessagesAction">
            <forward name="success"
                     contextRelative="true"
                     path="jsp/main/StatusMessages.jsp" />
        </action>

    </action-mappings>

    <controller processorClass="com.bea.alsb.console.common.base.SBConsoleRequestProcessor"
                inputForward="true" nocache="true"/>

</struts-config>
