<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	                           "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

    <form-beans>
        <form-bean
            name="ProviderForm"
            type="com.bea.alsb.console.providers.forms.ProviderForm"/>

        <form-bean name="BrowserForm" type="com.bea.alsb.console.forms.ResourceSummaryForm"/>

        <form-bean
            name="KeypairAliasForm"
            type="com.bea.alsb.console.providers.forms.KeypairAliasForm"/>

    </form-beans>

    <global-exceptions>
        <exception key=""
                   type="java.lang.Exception"
                   handler="com.bea.alsb.console.controller.ConsoleException" />
    </global-exceptions>

    <global-forwards>
        <forward name="GlobalException"
                 contextRelative="true"
                 path="jsp/main/ErrorPage.jsp" />
    </global-forwards>

    <action-mappings>

        <action path="/ViewAllProviders"
            type="com.bea.alsb.console.providers.actions.ViewAllProvidersAction"
            validate="false">
            <forward name="success"
                contextRelative="true"
                path="jsp/providers/ViewAllProviders.jsp"/>
        </action>


        <action path="/ViewAllProvidersPgOrSort"
                type="org.apache.struts.actions.ForwardAction"
                parameter="jsp/providers/ViewAllProviders.jsp" />

        <action
            path="/CreateNewProvider"
            type="com.bea.alsb.console.providers.actions.CreateNewProviderAction">
            <forward name="success"
                contextRelative="true"
                path="jsp/providers/EditProvider.jsp"/>
        </action>

        <action
            path="/ViewProvider"
            type="com.bea.alsb.console.providers.actions.ViewProviderAction">
            <forward name="failed"
                contextRelative="true"
                path="jsp/providers/ViewAllProviders.jsp"/>
            <forward name="success"
                contextRelative="true"
                path="jsp/providers/ViewProvider.jsp"/>
        </action>

        <action
            path="/EditProvider"
            type="com.bea.alsb.console.providers.actions.EditProviderAction">
            <forward name="return"
                path="/ViewAllProviders.do"/>
            <forward name="success"
                contextRelative="true"
                path="jsp/providers/EditProvider.jsp"/>
        </action>

        <action
            path="/SubmitEditProvider"
            type="com.bea.alsb.console.providers.actions.SubmitEditProviderAction"
            name="ProviderForm"
            attribute="providerform"
            scope="request"
            validate="true"
            input="failed">
            <forward name="success"
                path="/ViewAllProviders.do"/>
            <forward name="failed"
                contextRelative="true"
                path="jsp/providers/EditProvider.jsp"/>
            <forward name="cancel"
                path="/ViewAllProviders.do"/>
            <forward name="continue"
                contextRelative="true"
                path="jsp/providers/EditProvider.jsp"/>
        </action>

        <action path="/ProviderBrowserPgSort"
                type="org.apache.struts.actions.ForwardAction"
                parameter="jsp/providers/ProvidersBrowser.jsp" />

        <action path="/ProviderBrowser"
                type="com.bea.alsb.console.providers.actions.ProvidersBrowserAction"
                name="BrowserForm"
                scope="session"
                parameter="entry"
                attribute="ProvidersBrowserForm"
                validate="false">
            <forward name="finish"
                     contextRelative="true"
                     path="jsp/providers/ProvidersBrowser.jsp"/>
        </action>

        <action path="/ProviderBrowserTask"
                type="com.bea.alsb.console.providers.actions.ProvidersBrowserAction"
                name="BrowserForm"
                scope="session"
                attribute="ProvidersBrowserForm"
                validate="false">
            <forward name="finish"
                     contextRelative="true"
                     path="jsp/providers/ProvidersBrowser.jsp"/>
        </action>

        <action path="/SortKeypairAliases"
                type="org.apache.struts.actions.ForwardAction"
                parameter="jsp/providers/KeypairAliasBrowser.jsp" />

        <action path="/BrowseKeypairAliases"
                type="com.bea.alsb.console.providers.actions.KeypairAliasBrowserAction"
                name="KeypairAliasForm"
                scope="session"
                parameter="entry"
                attribute="KeypairAliasBrowserForm"
                validate="false">
            <forward name="finish"
                     contextRelative="true"
                     path="jsp/providers/KeypairAliasBrowser.jsp"/>
        </action>

        <action path="/SubmitKeypairAliasSelection"
                type="com.bea.alsb.console.providers.actions.SubmitKeypairAliasSelectionAction"
                name="KeypairAliasForm"
                scope="session"
                attribute="KeypairAliasBrowserForm"
                validate="false">
            <forward name="finish"
                     contextRelative="true"
                     path="jsp/providers/KeypairAliasBrowser.jsp"/>
        </action>

        <action path="/ViewCertificate"
                type="com.bea.alsb.console.providers.actions.ViewCertificateAction">
            <forward name="success"
                     contextRelative="true"
                     path="jsp/providers/ViewCertificate.jsp"/>
        </action>

        <action path="/ReturnToKeypairAliasBrowser"
                type="org.apache.struts.actions.ForwardAction"
                parameter="jsp/providers/KeypairAliasBrowser.jsp" />

    </action-mappings>

    <controller processorClass="com.bea.alsb.console.common.base.SBConsoleRequestProcessor"
                inputForward="true" nocache="true"/>

</struts-config>
