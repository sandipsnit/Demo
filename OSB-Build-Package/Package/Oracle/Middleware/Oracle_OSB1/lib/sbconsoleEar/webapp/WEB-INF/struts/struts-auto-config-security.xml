<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	                           "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

    <form-beans>
        <form-bean name="SimpleForm" type="com.bea.alsb.console.forms.SimpleForm" />
        <form-bean name="EditPolicyForm" type="com.bea.alsb.console.security.forms.EditPolicyForm" />
        <form-bean name="BrowserForm" type="com.bea.alsb.console.forms.ResourceSummaryForm"/>
        <form-bean name="PoliciesBrowserForm"
                   type="com.bea.alsb.console.services.forms.PoliciesBrowserForm"/>
        <form-bean name="OwsmPoliciesBrowserForm"
                   type="com.bea.alsb.console.services.forms.OwsmPoliciesBrowserForm"/>
    </form-beans>

    <global-exceptions>
        <exception key=""
                   type="java.lang.Exception"
                   handler="com.bea.alsb.console.controller.ConsoleException" />
    </global-exceptions>

    <global-forwards>
        <forward name="GlobalException"
                 contextRelative="true"
                 path="jsp/main/ErrorPage.jsp" />

        <forward name="ReturnToProjects"
                 contextRelative="true"
                 path="jsp/projects/ViewProjectExplorer.jsp" />
    </global-forwards>



	<action-mappings>

        <action path="/ViewSecurityPolicies"
                type="com.bea.alsb.console.security.actions.ViewAllPolicies" >
            <forward name="success"
                     contextRelative="true"
                     path="jsp/security/ViewSecurityPolicies.jsp"/>
        </action>

        <action path="/ViewSecurityPoliciesPgOrSort"
                type="org.apache.struts.actions.ForwardAction"
                parameter="jsp/security/ViewSecurityPolicies.jsp" />

        <action path="/EditSecurityPolicyStep1"
                type="com.bea.alsb.console.security.actions.EditSecurityPolicyStep1Action"
                name="EditPolicyForm"
                scope="request"
                attribute="actionform"
                validate="true"
                input="error">
            <forward name="cancel"
                     contextRelative="true"
                     path="jsp/security/ViewSecurityPolicies.jsp" />
            <forward name="error"
                     contextRelative="true"
                     path="jsp/security/EditSecurityPolicyStep1.jsp" />
            <forward name="next"
                     contextRelative="true"
                     path="jsp/security/ViewSecurityPolicies.jsp" />
        </action>

        <action path="/ManageSecurityPolicies"
                type="com.bea.alsb.console.security.actions.ManageSecurityPoliciesAction" >
            <forward name="failed"
                     contextRelative="true"
                     path="jsp/security/ViewSecurityPolicies.jsp" />
            <forward name="add"
                     contextRelative="true"
                     path="jsp/security/EditSecurityPolicyStep1.jsp" />
            <forward name="deleted"
                     contextRelative="true"
                     path="jsp/security/ViewSecurityPolicies.jsp" />
            <forward name="view"
                     contextRelative="true"
                     path="jsp/security/ViewSecurityPolicy.jsp" />
            <forward name="edit"
                     contextRelative="true"
                     path="jsp/security/EditSecurityPolicyStep1.jsp" />
        </action>

        <action path="/PolicyBrowserPgSort"
                type="org.apache.struts.actions.ForwardAction"
                parameter="jsp/security/PolicyBrowser.jsp" />

        <action path="/BrowsePolicies"
                type="com.bea.alsb.console.security.actions.PoliciesBrowserAction"
                name="PoliciesBrowserForm"
                scope="session"
                parameter="entry"
                attribute="PoliciesBrowserForm"
                validate="false">
            <forward name="finish"
                     contextRelative="true"
                     path="jsp/security/PolicyBrowser.jsp"/>
        </action>

        <action path="/PolicyBrowserTask"
                type="com.bea.alsb.console.security.actions.PoliciesBrowserAction"
                name="PoliciesBrowserForm"
                scope="session"
                attribute="PoliciesBrowserForm"
                validate="false">
            <forward name="finish"
                     contextRelative="true"
                     path="jsp/security/PolicyBrowser.jsp"/>
        </action>

        <action path="/OwsmPolicyBrowserPgSort"
                type="org.apache.struts.actions.ForwardAction"
                parameter="jsp/security/OwsmPolicyBrowser.jsp" />

        <action path="/BrowseOwsmPolicies"
                type="com.bea.alsb.console.security.actions.OwsmPoliciesBrowserAction"
                name="OwsmPoliciesBrowserForm"
                scope="session"
                parameter="entry"
                attribute="OwsmPoliciesBrowserForm"
                validate="false">
            <forward name="finish"
                     contextRelative="true"
                     path="jsp/security/OwsmPolicyBrowser.jsp"/>
        </action>

        <action path="/OwsmPolicyBrowserTask"
                type="com.bea.alsb.console.security.actions.OwsmPoliciesBrowserAction"
                name="OwsmPoliciesBrowserForm"
                scope="session"
                attribute="OwsmPoliciesBrowserForm"
                validate="false">
            <forward name="finish"
                     contextRelative="true"
                     path="jsp/security/OwsmPolicyBrowser.jsp"/>
        </action>

	</action-mappings>

    <controller processorClass="com.bea.alsb.console.common.base.SBConsoleRequestProcessor"
                multipartClass="com.bea.alsb.console.controller.MultipartRequestHandler"
                inputForward="true" nocache="true"/>

</struts-config>
