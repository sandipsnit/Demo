<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	                           "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

    <form-beans>
        <form-bean name="SimpleForm" type="com.bea.alsb.console.forms.SimpleForm" />
        <form-bean name="SmartSearchSummaryForm"
                   type="com.bea.alsb.console.smartsearch.forms.SmartSearchSummaryForm"/>
    </form-beans>

    <global-exceptions>
        <exception key=""
                   type="java.lang.Exception"
                   handler="com.bea.alsb.console.controller.ConsoleException" />
    </global-exceptions>

    <global-forwards>
        <forward name="GlobalException"
                 contextRelative="true"
                 path="jsp/main/ErrorPage.jsp" />
    </global-forwards>

	<action-mappings>
        <action path="/ViewSmartSearch"
                type="com.bea.alsb.console.smartsearch.actions.ViewSmartSearchAction"
                scope="session"
                validate="false" >
            <forward name="viewServices"
                contextRelative="true"
                path="jsp/smartsearch/ViewServices.jsp" />
            <forward name="viewAlertDestinations"
                contextRelative="true"
                path="jsp/smartsearch/ViewAlertDestinations.jsp" />
            <forward name="viewSLAAlerts"
                contextRelative="true"
                path="jsp/smartsearch/ViewSLAAlerts.jsp" />
            <forward name="success"
                contextRelative="true"
                path="jsp/smartsearch/ViewSmartSearch.jsp" />
        </action>

    </action-mappings>

    <action-mappings>
        <action path="/DoSmartSearch"
                type="com.bea.alsb.console.smartsearch.actions.DoSmartSearchAction"
                scope="session"
                validate="false" >
            <forward name="viewServices"
                contextRelative="true"
                path="jsp/smartsearch/ViewServices.jsp" />
            <forward name="viewAlertDestinations"
                contextRelative="true"
                path="jsp/smartsearch/ViewAlertDestinations.jsp" />
            <forward name="viewSLAAlerts"
                contextRelative="true"
                path="jsp/smartsearch/ViewSLAAlerts.jsp" />
            <forward name="success"
                contextRelative="true"
                path="jsp/smartsearch/ViewSmartSearch.jsp" />
        </action>

    </action-mappings>

    <action-mappings>
        <action path="/UpdateConfiguration"
                type="com.bea.alsb.console.smartsearch.actions.DoSmartSearchAction"
                scope="session"
                validate="false" >
            <forward name="viewServices"
                contextRelative="true"
                path="jsp/smartsearch/ViewServices.jsp" />
            <forward name="viewAlertDestinations"
                contextRelative="true"
                path="jsp/smartsearch/ViewAlertDestinations.jsp" />
            <forward name="viewSLAAlerts"
                contextRelative="true"
                path="jsp/smartsearch/ViewSLAAlerts.jsp" />
            <forward name="success"
                contextRelative="true"
                path="jsp/smartsearch/ViewSmartSearch.jsp" />
        </action>

    </action-mappings>

    <controller processorClass="com.bea.alsb.console.common.base.SBConsoleRequestProcessor"
                inputForward="true" nocache="true"/>    
</struts-config>
