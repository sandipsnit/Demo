<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	                           "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

    <form-beans>
        <form-bean name="SimpleForm"  type="com.bea.alsb.console.forms.SimpleForm" />
    </form-beans>

    <global-exceptions>
        <exception key=""
                   type="java.lang.Exception"
                   handler="com.bea.alsb.console.controller.ConsoleException" />
    </global-exceptions>

    <global-forwards>
        <forward name="GlobalException"
                 contextRelative="true"
                 path="jsp/main/ErrorPage.jsp" />
    </global-forwards>

	<action-mappings>

        <!-- =============  stage actions  ============ -->

        <action path="/StageEntry"
                type="com.bea.alsb.console.stages.actions.EditStageAction">
            <forward name="success"
                    contextRelative="true"
                     path="jsp/stages/EditStage.jsp" />
            <forward name="error"
                     path="pipelines/EditPipelineDetailsEntry.do" />

        </action>

        <action path="/StageSessionEntry"
		        type="org.apache.struts.actions.ForwardAction"
		        parameter="jsp/stages/EditStage.jsp" />

        <action path="/ViewStage"
                type="com.bea.alsb.console.stages.actions.EditStageAction">
            <forward name="success"
                    contextRelative="true"
                     path="jsp/stages/EditStage.jsp" />
            <forward name="error"
                     path="pipelines/EditPipelineDetailsEntry.do" />

        </action>

        <action path="/EditStage"
                type="com.bea.alsb.console.stages.actions.EditStageAction">
            <forward name="success"
                    contextRelative="true"
                     path="jsp/stages/EditStage.jsp" />
            <forward name="error"
                     path="pipelines/EditPipelineDetailsEntry.do" />

        </action>

        <action path="/SubmitStage"
                type="com.bea.alsb.console.stages.actions.SubmitStageAction">
            <forward name="edit"
                contextRelative="true"
                     path="jsp/stages/EditStage.jsp" />
            <forward name="reenter"
                     contextRelative="true"
                     path="jsp/stages/EditStage.jsp" />
            <forward name="success"
                     path="pipelines/EditPipelineDetailsEntry.do" />
            <forward name="error"
                     path="pipelines/EditPipelineDetailsEntry.do" />
            <forward name="forwardSuccessToPipeline"
                     contextRelative="true"
                     path="/pipelines/SubmitPipelineNode.do?actionSubmit=submitPipeline" />
            <forward name="forwardSuccessToErrorHandler"
                     contextRelative="true"
                     path="/pipelines/SubmitErrorHandler.do?actionSubmitAll=actionSubmitAll" />
        </action>

        <action path="/ViewSubmitStage"
                type="com.bea.alsb.console.stages.actions.SubmitViewStageAction">
            <forward name="reenter"
                     contextRelative="true"
                     path="jsp/stages/EditStage.jsp" />
        </action>

	</action-mappings>

    <controller processorClass="com.bea.alsb.console.common.base.SBConsoleRequestProcessor"
                inputForward="true" nocache="true"/>

</struts-config>
