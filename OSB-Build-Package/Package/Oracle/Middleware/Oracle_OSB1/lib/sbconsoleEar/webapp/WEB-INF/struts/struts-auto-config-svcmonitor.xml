<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	                           "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

    <form-beans>
        <form-bean name="SimpleForm" type="com.bea.alsb.console.forms.SimpleForm" />
    </form-beans>

    <global-exceptions>
        <exception key=""
                   type="java.lang.Exception"
                   handler="com.bea.alsb.console.controller.ConsoleException" />
    </global-exceptions>

    <global-forwards>
        <forward name="GlobalException"
                 contextRelative="true"
                 path="jsp/main/ErrorPage.jsp" />
    </global-forwards>

	<action-mappings>

        <action path="/ViewServiceStatistics"
                type="com.bea.alsb.console.svcmonitor.actions.ViewServiceStatisticsAction"
                validate="false">
            <forward name="success"
                     contextRelative="true"
                     path="jsp/svcmonitor/ViewServiceStatistics.jsp" />
            <forward
                name="warning"
                contextRelative="true"
                path="jsp/main/WarningPage.jsp"/>

            <forward
                name="failed"
                contextRelative="true"
                path="jsp/svcmonitor/ViewServiceStatistics.jsp" />

        </action>
        
        <action path="/ViewServiceSummary"
                type="com.bea.alsb.console.svcmonitor.actions.ViewServiceSummaryAction"
                validate="false">
            <forward name="success"
                     contextRelative="true"
                     path="jsp/svcmonitor/ViewServiceSummary.jsp" />
        </action>

        <action path="/PushEndpointOnline"
                type="com.bea.alsb.console.svcmonitor.actions.MarkEndpointOnlineAction"
                validate="false">
            <forward name="success"
                     contextRelative="true"
                     path="jsp/svcmonitor/ViewServiceStatistics.jsp" />
        </action>

        <action path="/ServiceSummaryPageOrSort"
                type="org.apache.struts.actions.ForwardAction"
                parameter="jsp/svcmonitor/ViewServiceSummary.jsp" />

	</action-mappings>

    <controller processorClass="com.bea.alsb.console.common.base.SBConsoleRequestProcessor"
                inputForward="true" nocache="true"/>

</struts-config>
