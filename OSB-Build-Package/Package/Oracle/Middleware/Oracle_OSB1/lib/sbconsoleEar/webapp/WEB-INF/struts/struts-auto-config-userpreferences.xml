<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
                               "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

    <form-beans>
        <form-bean name="SimpleForm" type="com.bea.alsb.console.forms.SimpleForm"/>
        <form-bean name="UserPreferencesForm" type="com.bea.alsb.console.userpreferences.forms.UserPreferencesForm"/>
    </form-beans>

    <global-exceptions>
        <exception key="UNDEFINED"
                   type="java.lang.Exception"
                   handler="com.bea.alsb.console.controller.ConsoleException" />
    </global-exceptions>

    <global-forwards>
        <forward name="GlobalException"
                 contextRelative="true"
                 path="jsp/main/ErrorPage.jsp" />
    </global-forwards>

    <action-mappings>

        <action path="/ViewUserPreferences"
                type="com.bea.alsb.console.userpreferences.actions.ViewUserPreferencesAction"
                name="UserPreferencesForm">
            <forward name="success"
                     contextRelative="true"
                     path="jsp/userpreferences/ViewUserPreferences.jsp"/>
        </action>

        <action path="/UpdateUserPreferences"
                type="com.bea.alsb.console.userpreferences.actions.UpdateUserPreferencesAction"
                name="UserPreferencesForm" >
            <forward name="success"
                     contextRelative="true"
                     path="jsp/userpreferences/ViewUserPreferences.jsp"/>
        </action>

    </action-mappings>

    <controller processorClass="com.bea.alsb.console.common.base.SBConsoleRequestProcessor"
                inputForward="true" nocache="true"/>

</struts-config>
