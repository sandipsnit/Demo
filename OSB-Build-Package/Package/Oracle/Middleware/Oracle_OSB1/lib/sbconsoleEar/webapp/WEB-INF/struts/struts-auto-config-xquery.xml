<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
	                           "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

    <form-beans>
        <form-bean name="SimpleForm" type="com.bea.alsb.console.forms.SimpleForm" />
    </form-beans>

    <global-exceptions>
        <exception key=""
                   type="java.lang.Exception"
                   handler="com.bea.alsb.console.controller.ConsoleException" />
    </global-exceptions>

    <global-forwards>
        <forward name="GlobalException"
                 contextRelative="true"
                 path="jsp/main/ErrorPage.jsp" />
    </global-forwards>

	<action-mappings>

        <!--
            Main actions
        -->
        <action path="/EditXQueryCondition"
                type="com.bea.alsb.console.xquery.actions.EditXQueryConditionAction"
                name="SimpleForm"
                scope="session"
                parameter="tab"
                validate="true"
                input="success" >
            <forward name="success"
                     contextRelative="true"
                     path="jsp/xquery/ConditionBuilder.jsp" />
        </action>

        <action path="/SubmitXQueryCondition"
                type="com.bea.alsb.console.xquery.actions.SubmitXQueryConditionAction"
                name="SimpleForm"
                scope="session"
                parameter="tab"
                validate="true"
                input="success" >
            <forward name="submit"
                     contextRelative="true"
                     path="jsp/xquery/SubmitBuilder.jsp" />
            <forward name="success"
                     contextRelative="true"
                     path="jsp/xquery/ConditionBuilder.jsp" />
            <forward name="failed"
                     contextRelative="true"
                     path="jsp/xquery/ConditionBuilder.jsp" />
        </action>

        <action path="/EditXQueryExpression"
                type="com.bea.alsb.console.xquery.actions.EditXQueryExpressionAction"
                name="SimpleForm"
                scope="session"
                parameter="tab"
                validate="true"
                input="success" >
            <forward name="success"
                     contextRelative="true"
                     path="jsp/xquery/XQueryBuilder.jsp" />
        </action>

        <action path="/SubmitXQueryExpression"
                type="com.bea.alsb.console.xquery.actions.SubmitXQueryExpressionAction"
                name="SimpleForm"
                scope="session"
                parameter="tab"
                validate="true"
                input="success" >
            <forward name="submit"
                     contextRelative="true"
                     path="jsp/xquery/SubmitBuilder.jsp" />
            <forward name="success"
                     contextRelative="true"
                     path="jsp/xquery/XQueryBuilder.jsp" />
            <forward name="failed"
                     contextRelative="true"
                     path="jsp/xquery/XQueryBuilder.jsp" />
        </action>

        <action path="/EditXPathExpression"
                type="com.bea.alsb.console.xquery.actions.EditXPathExpressionAction"
                name="SimpleForm"
                scope="session"
                parameter="tab"
                validate="true"
                input="success" >
            <forward name="success"
                     contextRelative="true"
                     path="jsp/xquery/XPathBuilder.jsp" />
        </action>

        <action path="/SubmitXPathExpression"
                type="com.bea.alsb.console.xquery.actions.SubmitXPathExpressionAction"
                name="SimpleForm"
                scope="session"
                parameter="tab"
                validate="true"
                input="success" >
            <forward name="submit"
                     contextRelative="true"
                     path="jsp/xquery/SubmitBuilder.jsp" />
            <forward name="success"
                     contextRelative="true"
                     path="jsp/xquery/XPathBuilder.jsp" />
            <forward name="failed"
                     contextRelative="true"
                     path="jsp/xquery/XPathBuilder.jsp" />
        </action>

        <action path="/ViewXQueryFunctions"
                type="com.bea.alsb.console.xquery.actions.ViewXQueryFunctionsAction"
                name="SimpleForm"
                scope="session"
                parameter="tab"
                validate="true"
                input="success" >
            <forward name="success"
                     contextRelative="true"
                     path="jsp/xquery/ViewXQueryFunctions.jsp" />

        </action>

        <action path="/ViewXQueryVariable"
                type="com.bea.alsb.console.xquery.actions.ViewVariableAction"
                name="SimpleForm"
                scope="session"
                parameter="tab"
                validate="true"
                input="success" >
            <forward name="success"
                    contextRelative="true"
                    path="jsp/xquery/ViewXqueryVariable.jsp" />
        </action>

        <action path="/ViewNamespaces"
                type="com.bea.alsb.console.xquery.actions.ViewNamespacesAction">
            <forward name="success"
                    contextRelative="true"
                    path="jsp/xquery/ViewNamespaces.jsp" />
        </action>

        <action path="/Logout"
                type="com.bea.alsb.console.main.LogoutAction" >
            <forward name="success"
                     redirect="true"
                     path="/" />
        </action>

	</action-mappings>

    <controller processorClass="com.bea.alsb.console.common.base.SBConsoleRequestProcessor"
               inputForward="true" nocache="true"/>

</struts-config>
