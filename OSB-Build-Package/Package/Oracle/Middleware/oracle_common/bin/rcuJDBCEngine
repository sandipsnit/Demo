#!/bin/sh -f
# $Header: emcore/rcu/bin/rcuJDBCEngine /st_emcore_11.1as/3 2010/02/08 03:18:24 mmehta Exp $
#
# rcu.sh
#
# Copyright (c) 1997, 2010, Oracle and/or its affiliates. All rights reserved. 
#
ARGUMENTS=""
NUMBER_OF_ARGUMENTS=$#
if [ $NUMBER_OF_ARGUMENTS -gt 0 ]; then
        ARGUMENTS=$*
fi

# Run RCU
if [ "$ORACLE_HOME" != "" ]
then
    CLASSPATH=$ORACLE_HOME/../oracle_common/modules/oracle.odl_11.1.1/ojdl.jar:$ORACLE_HOME/../wlserver_10.3/server/lib/ojdbc6.jar:$ORACLE_HOME/jlib/rcucommon.jar
    JRE_DIR=$ORACLE_HOME/jdk/jre/
else
    if [ "$RCU_HOME" != "" ]
    then
        CLASSPATH=$RCU_HOME/jlib/rcucommon.jar:$RCU_HOME/jdbc/lib/ojdbc6.jar:$RCU_HOME/modules/oracle.odl_11.1.1/ojdl.jar:$RCU_HOME/../oracle_common/modules/oracle.odl_11.1.1/ojdl.jar:$RCU_HOME/../wlserver_10.3/server/lib/ojdbc6.jar
        JRE_DIR=$RCU_HOME/jdk/jre/
    else
        echo "Either ORACLE_HOME or RCU_HOME should be set to be able to run this script. Please set one of these environment variables and try again."
        exit -1
    fi
fi

$JRE_DIR/bin/java -cp $CLASSPATH oracle.sysman.assistants.common.dbutil.jdbc.JDBCEngine $ARGUMENTS
