<?xml version = '1.0' encoding = 'UTF-8'?>
<logging_configuration>
    <log_handlers>
        <log_handler name='odl-handler' class='oracle.core.ojdl.logging.ODLHandlerFactory'>
            <property name='path' value='${java.io.tmpdir}/DiagEngine_${user.name}.log'/>
            <property name='maxFileSize' value='1000000'/>
            <property name='maxLogSize' value='5000000'/>
        </log_handler>
    </log_handlers>
    <loggers>
        <logger name='oracle' level='WARNING' useParentHandlers='false'>
            <handler name='odl-handler'/>
        </logger>
        <logger name='oracle.dfw.healthtest' level='WARNING' useParentHandlers='false'>
            <handler name='odl-handler'/>
        </logger>
    </loggers>
</logging_configuration>
