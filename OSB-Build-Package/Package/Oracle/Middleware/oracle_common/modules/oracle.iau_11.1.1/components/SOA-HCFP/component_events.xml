<AuditConfig componentType="SOA-HCFP" xmlns="http://xmlns.oracle.com/ias/audit/audit.xsd">
  <Events componentType="SOA-HCFP" displayName="Oracle SOA Suite for healthcare integration">
    <Category displayName="User Session" name="UserSession">
      <CommonAttributes>
        <Attribute name="Reason" type="string" maxLength="255">
          <HelpText>The reason this event occurred</HelpText>
        </Attribute>
      </CommonAttributes>
      <Event displayName="User Login" name="UserLogin" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits user login to Oracle SOA Suite for healthcare integration UI (Success only)</HelpText>
      </Event>
      <Event displayName="User Logout" name="UserLogout" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits user logout from Oracle SOA Suite for healthcare integration UI (Success only)</HelpText>
      </Event>
    </Category>  
	<Category displayName="Endpoint Management" name="EndpointManagement">
	  <CommonAttributes>
        <Attribute name="Reason" type="string" maxLength="255">
          <HelpText>The reason this event occurred</HelpText>
        </Attribute>
      </CommonAttributes>
	  <Event displayName="Create Endpoint" name="CreateEndpoint" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits the creation of Endpoint (Success only)</HelpText>
      </Event>
	  <Event displayName="Enable Endpoint" name="EnableEndpoint" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits the activation of an Endpoint (Success only)</HelpText>
      </Event>
      <Event displayName="Disable Endpoint" name="DisableEndpoint" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits deactivation of an Endpoint (Success only)</HelpText>
      </Event>
      <Event displayName="Delete Endpoint" name="DeleteEndpoint" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits Deletion of an Endpoint (Success only)</HelpText>
      </Event>
	</Category>
	<Category displayName="Document Management" name="DocumentManagement">
	  <CommonAttributes>
        <Attribute name="Reason" type="string" maxLength="255">
          <HelpText>The reason this event occurred</HelpText>
        </Attribute>
      </CommonAttributes>
	  <Event displayName="Create Document Definition" name="CreateDocumentDefinition" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits the creation of Document Definition (Success only)</HelpText>
      </Event>
	  <Event displayName="Update Document Definition" name="UpdateDocumentDefinition" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits the updation of Document Definition (Success only)</HelpText>
      </Event>
      <Event displayName="Delete Document Definition" name="DeleteDocumentDefinition" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits the deletion of Document Definition (Success only)</HelpText>
      </Event>
	  <Event displayName="Resubmit Message" name="ResubmitMessage" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits resubmitting a Message (Success only)</HelpText>
      </Event>
	  <Event displayName="Purge Message" name="PurgeMessage" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits purging a Message (Success only)</HelpText>
      </Event>
	  <Event displayName="Read Payload" name="ReadPayload" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits reading the payload (Success only)</HelpText>
      </Event>
	</Category>
	<Category name="Configuration">
      <CommonAttributes>
        <Attribute name="Reason" type="string" maxLength="255">
          <HelpText>The reason this event occurred</HelpText>
        </Attribute>
      </CommonAttributes>
      <Event name="Import" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits the import of design time data (Success only)</HelpText>
      </Event>
	  <Event name="Export" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits the Export of design time data (Success only)</HelpText>
      </Event>
	  <Event displayName="Create Internal Delivery Channel" name="CreateInternalDeliveryChannel" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits the creation of internal Delivery Channel (Success only)</HelpText>
      </Event>
	  <Event displayName="Delete Internal Delivery Channel" name="DeleteInternalDeliveryChannel" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits the deletion of internal Delivery Channel (Success only)</HelpText>
      </Event>	  
	  <Event displayName="Create Mapset" name="CreateMapset" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits the creation of Mapset (Success only)</HelpText>
      </Event>
	  <Event displayName="Delete Mapset" name="DeleteMapset" unusedAttributes="ModuleId ApplicationName Target Roles">
        <HelpText>Audits the deletion of Mapset (Success only)</HelpText>
      </Event>
    </Category>
  </Events>
  <Levels>
    <Level name="ExceptionsOnly">
    </Level>
    <Level name="Basic">
    </Level>
    <Level name="Enhanced">
    </Level>
  </Levels>
  <FilterPresetDefinitions>
    <FilterPresetDefinition name="Low" displayName="Low" helpText=" Low level">UserLogin,UserLogout,CreateEndpoint,CreateDocumentDefinition,ResubmitMessage,PurgeMessage,Import,Export,CreateInternalDeliveryChannel,CreateMapset,ReadPayload
    </FilterPresetDefinition>
     <FilterPresetDefinition name="Medium" helpText="Medium level">UserLogin,UserLogout,CreateEndpoint,EnableEndpoint,DisableEndpoint,DeleteEndpoint,CreateDocumentDefinition,UpdateDocumentDefinition,DeleteDocumentDefinition,ResubmitMessage,PurgeMessage,Import,Export,CreateInternalDeliveryChannel,DeleteInternalDeliveryChannel,CreateMapset,DeleteMapset,ReadPayload
    </FilterPresetDefinition>
  </FilterPresetDefinitions>
</AuditConfig>

