<!-- MDS START -->
<Component ID="MDS" PROGRESS_UNITS="50" CHILD_OF="AS_COMMON">
  <ValidIf DBTYPE="ORACLE"/>
  <Display NLS_ID="MDS_ID">Metadata Services</Display>
  <RepositoryConfigFile>%SCRIPT_HOME%/mds/mds.xml</RepositoryConfigFile>
  <DetectQuery>select owner from schema_version_registry where mr_type = 'MDS' and mrc_name = '%PREFIX_NAME%' and status = 'VALID'</DetectQuery>
  <DetectQuery OPERATION='DROP'>select owner from schema_version_registry where mr_type = 'MDS' and mrc_name = '%PREFIX_NAME%'</DetectQuery>
  <SchemaUser>MDS</SchemaUser>
  <DatabaseName>MDS</DatabaseName> 
  <Tablespaces>
    <Tablespace TYPE="DEFAULT_TABLESPACE">
       <Prompt NLS_ID="DEFAULT_TABLESPACE">Default Tablespace</Prompt>
       <TablespaceName>MDS</TablespaceName>
    </Tablespace>
    <Tablespace TYPE="TEMPORARY_TABLESPACE">
       <Prompt NLS_ID="TEMPORARY_TABLESPACE">Temporary Tablespace</Prompt>
       <TablespaceName>IAS_TEMP</TablespaceName>
    </Tablespace>
  </Tablespaces>
</Component>
