<!DOCTYPE TargetCollection SYSTEM "../dtds/TargetCollection.dtd">

<TargetCollection TYPE="metadata_repository" INCLUDE_DEFAULT="TRUE">
	<CollectionItem NAME="MDS_REPOSITORY_ROLLUP" UPLOAD="YES">
		<Schedule>
			<IntervalSchedule INTERVAL="300" TIME_UNIT="Sec"/>
		</Schedule>
		<MetricColl NAME="MDS_REPOSITORY_ROLLUP">
			<Condition COLUMN_NAME="readDocument.throughput" 
                                   CRITICAL="NotDefined" 
                                   WARNING="NotDefined" 
                                   OPERATOR="GT" 
                                   OCCURRENCES="2" 
                                   MESSAGE="Load is %value% and has crossed warning (%warning_threshold%) or critical (%critical_threshold%) threshold." MESSAGE_NLSID="readDocument_throughput_cond"/>
			<Condition COLUMN_NAME="readDocument.time" 
                                   CRITICAL="NotDefined" 
                                   WARNING="NotDefined" 
                                   OPERATOR="GT" 
                                   OCCURRENCES="2" 
                                   MESSAGE="Response is %value% and has crossed warning (%warning_threshold%) or critical (%critical_threshold%) threshold." MESSAGE_NLSID="readDocument_time_cond"/>
		</MetricColl>
	</CollectionItem>
	<CollectionItem NAME="MDS_PARTITION_ROLLUP" UPLOAD="YES">
		<Schedule>
			<IntervalSchedule INTERVAL="300" TIME_UNIT="Sec"/>
		</Schedule>
		<MetricColl NAME="MDS_PARTITION_ROLLUP">
			<Condition COLUMN_NAME="readDocument.throughput" 
                                   CRITICAL="NotDefined"
                                   WARNING="NotDefined"
                                   OPERATOR="GT" 
                                   OCCURRENCES="2" 
                                   MESSAGE="Load is %value% and has crossed warning (%warning_threshold%) or critical (%critical_threshold%) threshold." MESSAGE_NLSID="readDocument_throughput_cond"/>
			<Condition COLUMN_NAME="readDocument.time"
                                   CRITICAL="NotDefined" 
                                   WARNING="NotDefined" 
                                   OPERATOR="GT" 
                                   OCCURRENCES="2" 
                                   MESSAGE="Response is %value% and has crossed warning (%warning_threshold%) or critical (%critical_threshold%) threshold." MESSAGE_NLSID="readDocument_time_cond"/>
			<Condition COLUMN_NAME="writeDocument.throughput" 
                                   CRITICAL="NotDefined" 
                                   WARNING="NotDefined" 
                                   OPERATOR="GT" 
                                   OCCURRENCES="2" 
                                   MESSAGE="Write load is %value% and has crossed warning (%warning_threshold%) or critical (%critical_threshold%) threshold." MESSAGE_NLSID="writeDocument_throughput_cond"/>
			<Condition COLUMN_NAME="writeDocument.time"
                                   CRITICAL="NotDefined" 
                                   WARNING="NotDefined" 
                                   OPERATOR="GT" 
                                   OCCURRENCES="2" 
                                   MESSAGE="Write response is %value% and has crossed warning (%warning_threshold%) or critical (%critical_threshold%) threshold." MESSAGE_NLSID="writeDocument_time_cond"/>
		</MetricColl>
	</CollectionItem>

</TargetCollection>
