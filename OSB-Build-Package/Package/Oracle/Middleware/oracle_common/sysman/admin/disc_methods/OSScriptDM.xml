<DiscoveryMethod NAME="OSScript" 
                 VERSION="2.0" 
                 TYPE="HOST" >
   <Display>
    <Description NLSID="osscript_desc">Discover targets by running scripts on remote node</Description>
   </Display>

   <DiscCode CODE_LOCATION="HOST">
     <CodePackage PACKAGE_NAME="StdScripts">
       <Dependency REQUIREMENT="PERL" VERSION="5.8" />
     </CodePackage>
     <ScriptImpl SCRIPT="osscriptdm" />
   </DiscCode>

   <Signature NAME="SCRIPTNAME">
     <Display>
       <Description NLSID="placeholder">Script to execute for discovery</Description>  
     </Display>
     <ValueFormat TYPE="STRING" />
   </Signature>

   <Signature NAME="CATEGORY">
     <Display>
       <Description NLSID="placeholder">Category of discovery in discover.lst file</Description>  
     </Display>
     <ValueFormat TYPE="STRING" />
   </Signature>

   <Signature NAME="STDINHINTS">
     <Display>
       <Description NLSID="placeholder">Comma separated List of hints to send over standard input rather than as environment variables</Description>  
     </Display>
     <ValueFormat TYPE="STRING" />
   </Signature>

</DiscoveryMethod>


