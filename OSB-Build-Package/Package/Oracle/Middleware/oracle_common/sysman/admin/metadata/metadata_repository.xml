<!DOCTYPE TargetMetadata SYSTEM "../dtds/TargetMetadata.dtd">
<TargetMetadata META_VER="1.0" TYPE="metadata_repository" CATEGORY_PROPERTIES="VersionCategory" RESOURCE_BUNDLE_PACKAGE="oracle.sysman.emai.rsc.mds.metrics" HOST_BINDING_REQUIRED="FALSE">
   <Display>
      <Label NLSID="metadata_repositoryNLSID">Metadata Repository</Label>
      <ShortName NLSID="metadata_repositoryShortName">metadata_repository</ShortName>
      <Description NLSID="metadata_repositoryDescription">metadata_repository</Description>
   </Display>
   <AssocTarget ASSOCIATION_NAME="farm" ASSOC_TARGET_TYPE="*"/>
   <AssocTarget ASSOCIATION_NAME="managedBy" ASSOC_TARGET_TYPE="*"/>
   <AssocTarget ASSOCIATION_NAME="managedServer" ASSOC_TARGET_TYPE="*"/>

   <Metric NAME="MDS_REPOSITORY_ROLLUP" TYPE="TABLE">
      <Display>
         <Label NLSID="MDS_REPOSITORY_ROLLUP">MDS_REPOSITORY_ROLLUP</Label>
      </Display>
      <TableDescriptor>
         <ColumnDescriptor NAME="readDocument.throughput" TYPE="NUMBER">
            <Display>
               <Label NLSID="Load">Load</Label>
               <Unit NLSID="accesses_second">accesses/second</Unit>
            </Display>
         </ColumnDescriptor>
         <ColumnDescriptor NAME="readDocument.time" TYPE="NUMBER">
            <Display>
               <Label NLSID="Response">Response</Label>
               <Unit NLSID="throughput_in_seconds">Throughput in seconds</Unit>
            </Display>
         </ColumnDescriptor>
      </TableDescriptor>
      <QueryDescriptor FETCHLET_ID="JMX">
         <Property NAME="serviceURL" SCOPE="ASSOCTGT" ASSOCIATION_NAME="farm">serviceURL</Property>
         <Property NAME="UserName" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">UserName</Property>
         <Property NAME="password" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">password</Property>
         <Property NAME="metric" SCOPE="GLOBAL">metadata_repository:mds_repository_rollup</Property>
         <Property NAME="RepositoryName.parameter" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">RepositoryName</Property>
         <Property NAME="MetricService" SCOPE="GLOBAL">true</Property>
         <Property NAME="columnOrder" SCOPE="GLOBAL">readDocument.throughput;readDocument.time</Property>
	 <Property NAME="admlMap" SCOPE="GLOBAL">
	     <![CDATA[
             <argument type="java.util.Map">
                <value>
                    <item>
			<key>repositoryName.parameter</key>
                        <value type="java.lang.String">%RepositoryName.parameter%</value>
                    </item>
                </value>
            </argument>
	   ]]>
	</Property>
      </QueryDescriptor>
   </Metric>
   <Metric NAME="MDS_PARTITION_ROLLUP" TYPE="TABLE">
      <Display>
         <Label NLSID="MDS_PARTITION_ROLLUP">MDS_PARTITION_ROLLUP</Label>
      </Display>
      <TableDescriptor>
         <ColumnDescriptor NAME="repository" TYPE="STRING" IS_KEY="TRUE">
            <Display>
               <Label NLSID="Repository">Repository</Label>
            </Display>
         </ColumnDescriptor>
         <ColumnDescriptor NAME="name" TYPE="STRING" IS_KEY="TRUE">
            <Display>
               <Label NLSID="Partition">Partition</Label>
            </Display>
         </ColumnDescriptor>
         <ColumnDescriptor NAME="readDocument.throughput" TYPE="NUMBER">
            <Display>
               <Label NLSID="Load">Load</Label>
               <Unit NLSID="accesses_second">accesses/second</Unit>
            </Display>
         </ColumnDescriptor>
         <ColumnDescriptor NAME="readDocument.time" TYPE="NUMBER">
            <Display>
               <Label NLSID="Response">Response</Label>
               <Unit NLSID="throughput_in_seconds">Throughput in seconds</Unit>
            </Display>
         </ColumnDescriptor>
         <ColumnDescriptor NAME="writeDocument.throughput" TYPE="NUMBER">
            <Display>
               <Label NLSID="write_load">Number of document writes per sencond</Label>
               <Unit NLSID="writes_per_second">writes/second</Unit>
            </Display>
         </ColumnDescriptor>
         <ColumnDescriptor NAME="writeDocument.time" TYPE="NUMBER">
            <Display>
               <Label NLSID="write_response">Document write time (in seconds)</Label>
               <Unit NLSID="write_time_in_seconds">Document write time in seconds</Unit>
            </Display>
         </ColumnDescriptor>
      </TableDescriptor>
      <QueryDescriptor FETCHLET_ID="JMX">
         <Property NAME="serviceURL" SCOPE="ASSOCTGT" ASSOCIATION_NAME="farm">serviceURL</Property>
         <Property NAME="UserName" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">UserName</Property>
         <Property NAME="password" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">password</Property>
         <Property NAME="metric" SCOPE="GLOBAL">metadata_repository:mds_partition_rollup</Property>
         <Property NAME="MetricService" SCOPE="GLOBAL">true</Property>
         <Property NAME="RepositoryName.parameter" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">RepositoryName</Property>
         <Property NAME="columnOrder" SCOPE="GLOBAL">repository;name;readDocument.throughput;readDocument.time;writeDocument.throughput;writeDocument.time</Property>
         <Property NAME="admlMap" SCOPE="GLOBAL">
             <![CDATA[
             <argument type="java.util.Map">
                <value>
                    <item>
                        <key>repositoryName.parameter</key>
                        <value type="java.lang.String">%RepositoryName.parameter%</value>
                    </item>
                </value>
            </argument>
           ]]>
        </Property>
      </QueryDescriptor>
   </Metric>

   <InstanceProperties>

