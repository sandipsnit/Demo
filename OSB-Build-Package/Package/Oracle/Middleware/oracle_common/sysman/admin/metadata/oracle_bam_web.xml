<!DOCTYPE TargetMetadata SYSTEM "../dtds/TargetMetadata.dtd" [
<!ENTITY j2ee_application_response SYSTEM "./j2ee_application_response.xmlp">
]>

<TargetMetadata META_VER="1.0" TYPE="oracle_bam_web" CATEGORY_PROPERTIES="VersionCategory;serverType" RESOURCE_BUNDLE_PACKAGE="oracle.sysman.emai.rsc.bam">
   <Display>
      <Label NLSID="oracle_bam_webNLSID">Oracle BAM Web</Label>
      <ShortName NLSID="oracle_bam_webShortName">Oracle BAM Web</ShortName>
      <Description NLSID="oracle_bam_webDescription">Oracle BAM Web</Description>
   </Display>
 
   <AssocTarget ASSOCIATION_NAME="oc4j" ASSOC_TARGET_TYPE="oc4j"/>
   <AssocTarget ASSOCIATION_NAME="farm" ASSOC_TARGET_TYPE="oracle_mas_farm"/>

	&j2ee_application_response;

<Metric NAME="BAM_server_reportserver_activity_rate" TYPE="TABLE">
      <Display>
         <Label NLSID="RS_ACTIVITY_RATES">Report Server Activities</Label>
      </Display>
      <TableDescriptor>
         <ColumnDescriptor NAME="Activity.MsgRate" TYPE="NUMBER">
            <Display>
               <Label NLSID="RS_MSG_RATE">Activity Message Rate (per sec)</Label>
            </Display>
         </ColumnDescriptor>
         <ColumnDescriptor NAME="Activity.openViewSetAvgTime" TYPE="NUMBER">
            <Display>
               <Label NLSID="RS_AVG_TIME_OPEN_VIEWSET">Average Time To Open Viewsets (in sec)</Label>
            </Display>
         </ColumnDescriptor>
      </TableDescriptor>
      <QueryDescriptor FETCHLET_ID="JMX">
         <Property NAME="serviceURL" SCOPE="ASSOCTGT" ASSOCIATION_NAME="farm">serviceURL</Property>
         <Property NAME="UserName" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">UserName</Property>
         <Property NAME="password" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">password</Property>
         <Property NAME="metric" SCOPE="GLOBAL">oracle_bam_web:BAM_server_reportserver_activity_rate</Property>
         <Property NAME="ServerNames" SCOPE="INSTANCE">ServerNames</Property>
         <Property NAME="MetricService" SCOPE="GLOBAL">true</Property>
         <Property NAME="columnOrder" SCOPE="GLOBAL">Activity.MsgRate;Activity.openViewSetAvgTime</Property>
      </QueryDescriptor>
   </Metric>

	 <Metric NAME="BAM_server_reportserver_activedataviewset" TYPE="TABLE">
	    <Display>
	       <Label NLSID="RS_ACTIVE_DATA_VIEWSETS">Report Server Active Data View Set</Label>
	    </Display>
	    <TableDescriptor>
	       <ColumnDescriptor NAME="OpenedViewSets.value" TYPE="NUMBER">
		  <Display>
		     <Label NLSID="RS_OPENED_VIEWSETS">Open Viewsets</Label>
		  </Display>
	       </ColumnDescriptor>
	    </TableDescriptor>
	    <QueryDescriptor FETCHLET_ID="JMX">
	       <Property NAME="serviceURL" SCOPE="ASSOCTGT" ASSOCIATION_NAME="farm">serviceURL</Property>
	       <Property NAME="UserName" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">UserName</Property>
	       <Property NAME="password" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">password</Property>
	       <Property NAME="metric" SCOPE="GLOBAL">oracle_bam_web:BAM_server_reportserver_activedataviewset</Property>
	       <Property NAME="ServerNames" SCOPE="INSTANCE">ServerNames</Property>
	       <Property NAME="MetricService" SCOPE="GLOBAL">true</Property>
	       <Property NAME="columnOrder" SCOPE="GLOBAL">OpenedViewSets.value</Property>
	    </QueryDescriptor>
	 </Metric>

      <Metric NAME="BAM_server_reportserver_activedatapageinfo" TYPE="TABLE">
         <Display>
            <Label NLSID="RS_ACTIVIE_DATA_PAGE_INFO">Report Server Active Data Page Info</Label>
         </Display>
         <TableDescriptor>
            <ColumnDescriptor NAME="OpenedReports.value" TYPE="NUMBER">
               <Display>
                  <Label NLSID="RS_OPENED_REPORTS">Open Reports</Label>
               </Display>
            </ColumnDescriptor>
         </TableDescriptor>
         <QueryDescriptor FETCHLET_ID="JMX">
            <Property NAME="serviceURL" SCOPE="ASSOCTGT" ASSOCIATION_NAME="farm">serviceURL</Property>
            <Property NAME="UserName" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">UserName</Property>
            <Property NAME="password" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">password</Property>
            <Property NAME="metric" SCOPE="GLOBAL">oracle_bam_web:BAM_server_reportserver_activedatapageinfo</Property>
            <Property NAME="ServerNames" SCOPE="INSTANCE">ServerNames</Property>
            <Property NAME="MetricService" SCOPE="GLOBAL">true</Property>
            <Property NAME="columnOrder" SCOPE="GLOBAL">OpenedReports.value</Property>
         </QueryDescriptor>
      </Metric>

      <Metric NAME="BAM_server_reportserver_activedatapage" TYPE="TABLE">
         <Display>
            <Label NLSID="RS_ACTIVE_DATA_PAGE">Report Server Active Data Page</Label>
         </Display>
         <TableDescriptor>
            <ColumnDescriptor NAME="OpenConnections.value" TYPE="NUMBER">
               <Display>
                  <Label NLSID="RS_OPENED_CONNECTIONS">Open Connections</Label>
               </Display>
            </ColumnDescriptor>
         </TableDescriptor>
         <QueryDescriptor FETCHLET_ID="JMX">
            <Property NAME="serviceURL" SCOPE="ASSOCTGT" ASSOCIATION_NAME="farm">serviceURL</Property>
            <Property NAME="UserName" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">UserName</Property>
            <Property NAME="password" SCOPE="ASSOCTGT" OPTIONAL="TRUE" ASSOCIATION_NAME="farm">password</Property>
            <Property NAME="metric" SCOPE="GLOBAL">oracle_bam_web:BAM_server_reportserver_activedatapage</Property>
            <Property NAME="ServerNames" SCOPE="INSTANCE">ServerNames</Property>
            <Property NAME="MetricService" SCOPE="GLOBAL">true</Property>
            <Property NAME="columnOrder" SCOPE="GLOBAL">OpenConnections.value</Property>
         </QueryDescriptor>
      </Metric>

   <InstanceProperties>
     
      <!-- Add the MAS instances properties because of bug # 6798201 -->
   
      <InstanceProperty NAME="ServerNames">
        <Display>
                <Label NLSID="MAS_metricToplogyNodeIDLabel">Topology Node ID for Metrics</Label>
        </Display>
      </InstanceProperty>
      <InstanceProperty NAME="appName">
        <Display>
                <Label NLSID="appName">Name of the SOAInfra Application</Label>
         </Display>
      </InstanceProperty>     
      <InstanceProperty NAME="serverType">
         <Display>
                <Label NLSID="server_type_iprop">Server Type</Label>
         </Display>
      </InstanceProperty>
       
   </InstanceProperties>
</TargetMetadata>
