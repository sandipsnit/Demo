<LogCfgUITargetCustomization TARGET_TYPE="oracle_reptools">

    <LoggerPattern VALUE="oracle.reports.runtime"/>
    
    <LoggerPattern VALUE="oracle.reports.zrclient"/>
    
    <UIChoices DISABLE_SEARCH="TRUE"
               DISABLE_SPECIFY_LOGGERS="TRUE"
               DISABLE_RUNTIME_LOGGERS="TRUE" />
               
    <ComponentCustomization 
               IS_DOWN="viewScope.reports_toolsConfigModel.isReportsApplicationDown"
               IS_DOWN_RESOURCE_BUNDLE_CLASS_NAME="oracle.sysman.emai.rsc.reports.ReportsMsg"
               IS_DOWN_LABEL_NLS_ID="REPORTS_APPLICATION_IS_DOWN"
               CHECK_STATUS_FOR_PERSISTENT_LOGGERS="TRUE"
               CHECK_STATUS_FOR_HANDLERS="TRUE" 
               SHOW_RESTART_REQUIRED_FOR_PERSISTENT_LOGGERS="TRUE"
               SHOW_RESTART_REQUIRED_FOR_HANDLERS="TRUE" />

</LogCfgUITargetCustomization>
