<HOST PLATID="46">
  <NETWORK>
    <NODES VAR="CLUSTER_NODES"/>
  </NETWORK>
 <HOSTS>
    <HOST VAR="REMOTE_HOSTS"/>
  </HOSTS>
  <CODES>
    <CODE VAR="PLATFORM"/>
  </CODES>
  <DIRNAMES>
    <DIRNAME VAR="PLATFORM_DIR_NAME"/>
  </DIRNAMES>
  <TIME_STAMPS>
    <TIME_STAMP VAR="TIMESTAMP"/>
  </TIME_STAMPS>
  <NT_TEMPS>
    <NT_TEMP VAR="NT_TEMP_DIR"/>
  </NT_TEMPS>
  <USER_DIRS>
    <USER_DIR VAR="USER_HOME_DIR_ROOT"/>
  </USER_DIRS>
  <UNIX_TEMPS>
    <UNIX_TEMP VAR="UNIX_TEMP_DIR"/>
  </UNIX_TEMPS>
  <PORT VAR="USER_PORT" VALUE="3872" ATLEAST="1830" ATMOST="1849"/>
<VERSIONS>
    <VERSION VAR="VERSION" WRITABLE="TRUE"/>
</VERSIONS>
<OMS_HOME>
    <OMS_HOME VAR="OMS_HOME"/>
</OMS_HOME>
<DIRS>
    <DIR VAR="ORACLE_HOME" WRITABLE="TRUE"/>
</DIRS>
<DIRS_TMP>
     <DIR_TMP VAR="INSTALL_BASE_TEMP_DIR"/>
</DIRS_TMP>
<USER_INPUTS>
    <INSTALL_USER VAR="INSTALL_USER" />
    <GROUP_ID VAR="GROUP_ID" />
    <IS_TO_DO_SUDO_CHECK VAR="IS_TO_DO_SUDO_CHECK" />
     <IS_PAM_ENABLED VAR="IS_PAM_ENABLED"/>
    <PAM_PATH VAR="PAM_PATH" />
    <PAM_ARGS VAR="PAM_ARGS"/>
    <ROOT_COMMAND VAR="ROOT_COMMAND"/>
</USER_INPUTS>
<ENVIRONMENT>
    <VARIABLE NAME="TZ"/>
</ENVIRONMENT>
<DEPLOYMENT_SCOPES>
  <DEPLOYMENT_SCOPE VAR="DEPLOYMENT_SCOPE" />
</DEPLOYMENT_SCOPES>
<FILES>
    <FILE VAR="USER_SHIPHOME" EXISTS="TRUE"/>
</FILES>
<SECURED_VARS>
   <USER_PASSWD VAR="USER_PASSWD" />
   <SUDO_PASSWD VAR="SUDO_PASSWD" />
</SECURED_VARS>
<NFS_LOCATION>
    <NFS_LOCATION VAR="NFS_LOCATION" />
</NFS_LOCATION>
</HOST>

